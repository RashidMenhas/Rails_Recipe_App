<section class="recipes-container">
  <h1>Edit Recipe</h1>
  <div class="new_user">
    <%= form_with model: @recipe, local: true do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :preparation_time %>
      <%= f.text_field :preparation_time %>
    </div>
    <div>
      <%= f.label :cooking_time %>
      <%= f.text_field :cooking_time %>
    </div>
    <div>
      <%= f.label :public %>
      <%= f.check_box :public %>
    </div>
    <%= f.submit 'Update Recipe', class: 'recipe_btn_gen' %>
    <% end %>
  </div>
  <div class="back_food">
    <button type="button" class="food_btn"><%= link_to "Back to recipe", recipe_path(id: @recipe.id) %></button>
  </div>
</section>
